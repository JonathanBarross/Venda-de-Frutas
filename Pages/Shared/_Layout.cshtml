<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Carrega os estilos do Bootstrap e do site -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Venda_de_Frutas.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <!-- Logo do site -->
                <a class="navbar-brand" asp-area="" asp-page="/Index">Venda_de_Frutas</a>
                <!-- Botão para mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Menu de navegação -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Frutas/Index">Frutas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Frutas/Create">Cadastrar Frutas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Frutas/RelatorioVendas">Relatório de Vendas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Frutas/VenderFrutas">Vender as Frutas</a>
                        </li>
                    </ul> 
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <!-- Conteúdo principal da página -->
        <main role="main" class="pb-3"></main>
            @RenderBody() <!-- Aqui é onde o conteúdo de cada página é renderizado -->
        </main>
    </div>

    <!-- Rodapé -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Venda_de_Frutas</a>
        </div>
    </footer>

    <!-- Scripts do jQuery, Bootstrap e do site -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Seção para scripts específicos de cada página -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>